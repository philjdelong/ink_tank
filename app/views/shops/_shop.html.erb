<%= form_for @shop, method: method, url: shops_path do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :street_address %>
  <%= f.text_field :street_address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>

  <%= f.hidden_field(:zip, value: zip) %>

  <%= submit_tag button_text %>
<% end %>

<h1>Enter Shop Information</h1>

<%= render partial: 'zip', locals: { method: :get, button_text: 'Search For Shops'} %>

<% if request.env['PATH_INFO'] == "/shops/new" %>
  <% if shops != nil %>
    <% shops.each do |shop| %>
      <ul class = 'shop'>
        <li><p>Shop name: <%= shop.name %></p></li>
        <li><p>Shop address: <%= shop.street_address %></p></li>
      </ul>
    <% end %>
  <% end %>

  <p>Shop not listed? Add it!</p>
  <%= render partial: 'shop', locals: { method: :post, button_text: 'Next', zip: new_shop.zip} %>
<% end %>

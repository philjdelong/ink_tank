<div align='right' class="forms">
<h1>Enter Shop Information</h1>

<%= render partial: 'zip', locals: { method: :get, button_text: 'Search For Shops'} %>

<% if @new_shop %>
  <% if @shops != [] %>
  <p>Shops in <%= @new_shop.zip %></p>
    <% @shops.each do |shop| %>
      <label class = "container-<%= shop.id %>">
      <input type="radio" name="radio">
      Shop: <%= shop.name%>, <%= shop.street_address %>
      <span class="checkmark"></span>
    </label>
    <% end %>
    <p>Shop not listed? Add it!</p>
  <% end %>

  <% if @shops == [] %>
    <p>No shops found in that zipcode. Please create one.</p>
  <% end %>

  <%= render partial: 'shop', locals: { method: :post, button_text: 'Next', zip: @new_shop.zip} %>
<% end %>
</div>
